@{
    ViewData["Title"] = "Somar";
}

<h1>Somar</h1>
<p>Utilize o formulário abaixo para somar dois números.</p>
<p>Obs.: Para números com casas decimais use vírgula.</p>

<form action="/OperacoesMatematicas/ResultadoSoma" method="post">
    <label for="n1">Número 1</label>
    <input type="text" id="n1" name="n1">

    <label for="n2">Número 2</label>
    <input type="text" id="n2" name="n2">

    <input type="submit" value="Resultado">
</form>
